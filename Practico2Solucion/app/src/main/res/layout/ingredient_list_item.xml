<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/imgIngredient"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <View
        android:id="@+id/viewSelectedIngredient"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="#66050505"
        app:layout_constraintBottom_toBottomOf="@+id/imgIngredient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgIngredient"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lblIngredientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imgIngredient"
        app:layout_constraintEnd_toEndOf="@+id/imgIngredient"
        app:layout_constraintStart_toStartOf="@+id/imgIngredient"
        app:layout_constraintTop_toTopOf="@+id/imgIngredient"
        tools:text="Rock" />
</androidx.constraintlayout.widget.ConstraintLayout>